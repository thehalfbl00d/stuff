{
    "name": "taxbrew/taxbrew",
    "description": "TaxBrew - A Modern Tax Management System",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
